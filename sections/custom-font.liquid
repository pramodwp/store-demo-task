{% if section.settings.enable %}
  {% style %}
    {% assign items = section.blocks | reverse %}

    :root {
      {% for block in items %}
        {% assign name = block.settings.name %}
        {% assign url = block.settings.custom_font_url %}
        {% assign custom_font_weight = block.settings.custom_font_weight %}
        {% assign apply_heading = block.settings.apply_heading %}
        {% assign apply_body = block.settings.apply_body %}
  
        {% if url != blank and url != "" %}
          {% capture _font_type %}
            {% if url contains ".otf" %}
              opentype
            {% elsif url contains ".ttf" %}
              truetype
            {% elsif url contains ".svg" %}
              svg
            {% elsif url contains ".woff2" %}
              woff2
            {% else %}
              woff
            {% endif %}
          {% endcapture %}
          
          {% assign font_type = _font_type | strip %}
          
          @font-face {
            font-family: '{{ name }}';
            src: url({{ url }}) format('{{ font_type }}');
            {% if custom_font_weight != 'none' %}
              font-weight: {{ custom_font_weight }};
            {% endif %}
          }
  
          {% if apply_heading %}
            --font-heading-family: "{{ name }}", {{ settings.type_header_font.fallback_families }};
            --font-heading-style: normal;
            --font-heading-weight: {{ custom_font_weight }};
          {% endif %}
    
          {% if apply_body %}
            --font-body-family: "{{ name }}", {{ settings.type_body_font.fallback_families }};
            --font-body-style: normal;
            --font-body-weight: {{ custom_font_weight }};
            --font-body-weight-bold: 400;
          {% endif %}
          
        {% endif %}
      {% endfor %}
  }
    
  {% endstyle %}
{% endif %}

{% schema %}
{
  "name": "Custom Font",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "label": "Enable",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Font",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Font name",
          "default": "customfont"
        },
        {
          "type": "select",
          "id": "custom_font_weight",
          "label": "Font weight",
          "default": "none",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "normal",
              "label": "Normal"
            },
            {
              "value": "bold",
              "label": "Bold"
            }
          ]
        },
        {
          "type": "text",
          "id": "custom_font_url",
          "label": "Font URL"
        },
        {
          "type": "checkbox",
          "id": "apply_heading",
          "label": "Headings",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "apply_body",
          "label": "Body",
          "default": true
        }
      ]
    }
  ]
}
{% endschema %}